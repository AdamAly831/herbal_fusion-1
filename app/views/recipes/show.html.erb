<div class="row">
  <div class="col-md-6 col-md-offset-3 ">

<div class="box box2">
          <%= image_tag(@recipe.image(:medium), :class => "img-rounded img-responsive" )%>

      <p class="description">
       <%= @recipe.description %>
      </p>
      <p>
        <strong>
          Posted by <%= @recipe.user.name %>
        </strong>
      </p>
      <% if current_user == @recipe.user %>
        <%= link_to 'Edit', edit_recipe_path(@pin) %> |
      <% end %>
      <%= link_to 'Back', recipes_path %>
  </div>
</div>

</div>

